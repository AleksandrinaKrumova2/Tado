        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/number5dp" android:layout_marginRight="@dimen/number5dp" android:src="@drawable/circle_transparent" android:contentDescription="@string/imageview" />
