    <LinearLayout android:orientation="vertical" android:id="@+id/linear2" android:paddingLeft="@dimen/number20dp" android:paddingRight="@dimen/number20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/number10dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
