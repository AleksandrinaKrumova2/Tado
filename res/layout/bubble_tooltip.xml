<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/tooltip_topframe" android:background="@drawable/tooltip_top_frame" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" />
    <ImageView android:id="@+id/tooltip_pointer_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tooltip_arrow_up" />
    <FrameLayout android:id="@+id/tooltip_contentholder" android:background="#ffffff" android:paddingLeft="8dp" android:paddingRight="8dp" android:scrollbars="UNKNOWN_DATA_0x0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_below="@+id/tooltip_topframe">
        <TextView android:id="@+id/tooltip_contenttv" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </FrameLayout>
    <View android:id="@+id/tooltip_shadow" android:background="@drawable/quickcontact_drop_shadow" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x1801" android:layout_below="@+id/tooltip_contentholder" />
    <FrameLayout android:id="@+id/tooltip_bottomframe" android:background="@drawable/tooltip_bottom_frame" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_below="@+id/tooltip_contentholder" />
    <ImageView android:id="@+id/tooltip_pointer_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-1dp" android:src="@drawable/tooltip_arrow_down" android:layout_below="@+id/tooltip_bottomframe" />
</RelativeLayout>
