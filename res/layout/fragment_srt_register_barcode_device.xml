        <TextView android:textSize="28sp" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/register_device_title" android:layout_width="match_parent" android:layout_height="wrap_content" />
