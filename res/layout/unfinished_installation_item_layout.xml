<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/unfinished_installation_item_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/unfinished_installation_item_icon" android:layout_centerVertical="true">
        <TextView android:textStyle="bold" android:id="@+id/unfinished_installation_item_name" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/unfinished_installation_item_serial_number" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
