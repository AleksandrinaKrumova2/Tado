        <TextView android:textColor="@color/ac_red" android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/register_device_error_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:maxLines="5" />
