<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="28sp" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/reconnecting_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/installation_reconnectDevices_title" />
    <Button android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textColor="@color/ac_home" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/learn_more" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/installation_reconnectDevices_learnMoreButton" android:layout_below="@+id/reconnecting_title" style="@style/BorderlessButton" />
    <android.support.v7.widget.RecyclerView android:id="@+id/device_connection_state_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/state_panel" android:layout_below="@+id/learn_more" />
    <LinearLayout android:orientation="vertical" android:id="@+id/state_panel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/timer" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ProgressBar android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/device_reconnection_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" style="@style/Widget.AppCompat.ProgressBar" />
            <ImageView android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/device_reconnection_result" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:src="@drawable/ic_check_mark_green" />
            <TextView android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/reconnect_state_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/installation_reconnectDevices_initialMessage" />
        </LinearLayout>
        <Button android:enabled="false" android:textAppearance="@style/TextAppearance.AppCompat.Button" android:id="@+id/done" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/installation_reconnectDevices_confirmButton" style="@style/BorderlessButton" />
    </LinearLayout>
</RelativeLayout>
